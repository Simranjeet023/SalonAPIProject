@model IEnumerable<SalonAPIClient.Models.Review>
@{
    ViewData["Title"] = "Index";
}

<h1>Review Page</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <label>Id</label>
            </th>
            <th>
                <label>Rating</label>
            </th>
            <th>
                <label>SalonId</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalonId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, SalonId = item.SalonId }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }

    </tbody>
</table>

<p>
    <a asp-action="Create">Add New Review</a>
</p>
